		$this->display();
	}
	
	/*
	审核水稻信息
	@param $Post :
	rice_id,
	user_id,
	*/
	public function checkRice(){
		if (isLogin() != 0 && session('user_level') == 1){
			if (IS_POST){
				if (!empty($_POST["failed"])){  //判断是否是驳回审核
					$failed = true;	 //驳回审核
				}
				else{
					$failed = false;	
				}
				
				$rice_id = I("rice_id");
				$user_id = I("user_id");		
				$user = M("InfoUser");
				$user_level = $user->where("user_id='$user_id'")->getField("user_level");
				$rice = D("InfoRice");
				$rice_status = $rice->where("rice_id='$rice_id'")->getField("rice_status");
				
				if ($user_level == 1){  //判断管理员权限
					if ($rice_status == 2){  //判断是否已经通过审核或被退回
							$rid = $rice->checkRice($rice_id, $failed);
							if ($rid){ //审核成功
								$this->success("审核成功！", U("manageRice"));	
							}
							else{
								$this->error("审核失败！");	
							}
					}
					else if ($rice_status == 1){  //已经通过审核，不能重复审核
						$this->error("该地区已经通过审核！");
					}
					else if ($rice_status == 0){  //该信息不能通过审核
						$this->error("该水稻信息没有通过审核！");	
					}
					
				}
				else{  //非管理员
					$this->error("您没有权限进行这项操作！");	
				}
				
			}
			else{
					$rice_id = I("rice_id");
					$rice = M("InfoRice");
					$data = $rice->where("rice_id='$rice_id'")->find();
					$data['rice_region'] = getDistrictNameById($data['dist_id']);		
					$this->assign("ricedata", $data);
					$this->display();
			}
		}
		else{
			$this->error("请先登录", U('Admin/User/login'));
		}
	}
	
	
	public function manageRice(){
		if (isLogin() != 0 && session('user_level') == 1){   //判断是否登录已经是否是管理员
			$rice = M("InfoRice");
			$ricedata = $rice->select();   //得到水稻信息
			foreach($ricedata as  &$value){
					$dist_id = $value['dist_id'];
					$dist_name = getDistrictNameByID($dist_id);
					$value['dist_name'] = $dist_name;   //将地区ID换成地区名
					//显示审核状态
					$value['rice_status_id'] = $value['rice_status'];
					$value['rice_status'] = getRiceStatus($value['rice_status']);
			}
			$this->assign("ricedata",$ricedata);
			$this->display();	
		}
		else {
			$this->error("请先登录", U('Admin/User/login'));
		}
	}
	
	/*
	根据地区和年份来查询水稻
	@param post: 
	rice_region text,
	year int
	*/
	public function searchRice(){
		if (isLogin() != 0 && session('user_level') == 1){ //判断用户是否登录已经是否是管理员
			$dist = M("InfoDistrict");
	    	$distlist = $dist->field('dist_id, dist_name,dist_belongto')->select();
	    	$citylist =  array();
	    	foreach($distlist as $key => $value){
	    	if ($value["dist_id"] == $value["dist_belongto"]){
	    			array_push($citylist, $value);
	    			
	    		}	
	    	}
	    	$years = M("InfoRice")->distinct(true)->field("year")->select();
	    	$this->assign("distlist", $distlist);
	    	$this->assign("citylist", $citylist);
	    	$this->assign("years", $years);
			if( IS_POST){
				$rice_region = I('rice_region');
				$year = I("year");

				$rice = M("InfoRice");
				$dist_id = $rice_region;
				$ricedata = array();

				if ($rice_region == "" && $year != ""){  //只有年份
					$ricedata1 = $rice->where("year='$year'")->select();	
					foreach($ricedata1 as $key => $value){
						$value["dist_name"] = getDistrictNameById($value['dist_id']);
						$value["rice_status"] = getRiceStatus($value["rice_status"]);
						array_push($ricedata, $value);
					}		
				}
				else if ($rice_region != "" && $year == ""){  //只有地区			
					$ricedata1 = $rice->where("dist_id='$dist_id'")->select();		
					foreach($ricedata1 as $key => $value){
						$value["dist_name"] = getDistrictNameById($value['dist_id']);
						$value["rice_status"] = getRiceStatus($value["rice_status"]);
						array_push($ricedata, $value);
					}		
				}
				else if ($rice_region != "" && $year != ""){  //年份和地区都不为空
					$ricedata1 = $rice->where("dist_id='$dist_id' and year='$year'")->find();	
					$ricedata1["dist_name"] = getDistrictNameById($ricedata1['dist_id']);
					$ricedata1["rice_status"] = getRiceStatus($ricedata1["rice_status"]);
					array_push($ricedata, $ricedata1);
				}	
		
				$this->assign("ricedata", $ricedata);		
				$this->display();			
			}
			else{
	    		$this->display();   		
	    		
			}
		}
		else{
			$this->error("请先登录", U('Admin/User/login'));	
		}
	}
	
